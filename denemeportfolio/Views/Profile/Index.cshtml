@model List<denemeportfolio.Models.TblProfile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Profil</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İsim</th>
        <th>Dogum gunu</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Adress</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProfileId</td>
            <td>@item.Name</td>
            <td>@item.Birthday</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@item.Adress</td>
            <td><a href="/Profile/UpdateProfile/@item.ProfileId" class="btn btn-warning">Güncelle</a> </td>
            <td><a href="/Profile/ProfileTestimonial/@item.ProfileId" class="btn btn-danger">SİL</a> </td>

        </tr>




    }

</table>

<td><a href="/Profile/CreateProfile" class="btn btn-success">Yeni Profil Ekle</a></td>
