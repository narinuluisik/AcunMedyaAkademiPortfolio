@model List<denemeportfolio.Models.TblService>

<section class="ftco-section" id="services-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Hizmetler</span>
                <h2 class="mb-4">Müşterilerimize en iyi hizmeti sunmak için buradayız</h2>

                <p>sizin için özel çözümler yaratıyoruz. Her adımda kaliteyi ön planda tutuyoruz</p>
            </div>
        </div>



        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="media block-6 services d-block bg-white rounded-lg shadow ftco-animate" style="transition: transform 0.3s ease, box-shadow 0.3s ease; cursor: pointer;">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <img src="@item.IconUrl" alt="@item.Title" style="width: 60px; height: 60px; object-fit: contain; border-radius: 50%; margin: 15px; transition: transform 0.3s ease;" />
                        </div>
                        <div class="media-body text-center">
                            <h3 class="heading mb-3" style="font-size: 20px; font-weight: 600; color: #333;">@item.Title</h3>
                            <p style="font-size: 14px; color: #555;">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Hover Efekti ile Stil -->
<style>
    .services:hover {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }

    .services .icon img:hover {
        transform: scale(1.1);
    }
</style>
