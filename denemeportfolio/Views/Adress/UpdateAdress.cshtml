@model denemeportfolio.Models.TblAdress

@{
    ViewBag.Title = "Update Adress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Adress Güncelleme Sayfası</h3>

@using (Html.BeginForm("UpdateAdress", "Adress", FormMethod.Post))
{
    @Html.HiddenFor(model => model.AdressId)
    <div class="form-group">
        @Html.LabelFor(model => model.Adress)
        @Html.TextBoxFor(model => model.Adress, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Phone)
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextAreaFor(model => model.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Website)
        @Html.TextAreaFor(model => model.Website, new { @class = "form-control" })
    </div>

    <
    <button type="submit" class="btn btn-warning">Güncelle</button>
}
