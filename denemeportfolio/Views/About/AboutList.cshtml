@model List<denemeportfolio.Models.TblAbout>

@{
    ViewBag.Title = "About List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Başlık ve genel yapı -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Hakkımda</h2>

    <!-- About Kutu -->
    <div class="card mb-4" style="border-color: #e0e0e0;">
        <div class="card-header" style="background-color: #e0e0e0; color: #333;">
           
        </div>
        <div class="card-body" style="background-color: #fafafa;">
            @foreach (var item in ViewBag.Abouts)
            {
                <div class="row mb-3">
                    <div class="col-12 col-md-2 text-center">
                        <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid rounded-circle" style="width: 70px; height: 70px; object-fit: cover;" />
                    </div>
                    <div class="col-12 col-md-7">
                        <h5>@item.Title</h5>
                        <p>@item.Description</p>
                    </div>
                    
                </div>
            }
        </div>
    </div>

   
    <!-- Hobiler Kutu -->
    <div class="card mb-4" style="border-color: #e0e0e0;">
        <div class="card-header" style="background-color: #e0e0e0; color: #333;">
            <h3>Hobiler</h3>
        </div>
        <div class="card-body" style="background-color: #fafafa;">
            @foreach (var item in ViewBag.Hobbies)
            {
                <div class="row mb-3">
                    <div class="col-12 col-md-2 text-center">
                        @if (!string.IsNullOrEmpty(item.IconUrl))
                        {
                            <img src="@item.IconUrl" alt="@item.Title" class="img-fluid" style="width: 40px; height: 40px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Simge yok</span>
                        }
                    </div>
                    <div class="col-12 col-md-10">
                        <h5>@item.Title</h5>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Hizmetler Kutu -->
    <div class="card mb-4" style="border-color: #e0e0e0;">
        <div class="card-header" style="background-color: #e0e0e0; color: #333;">
            <h3>Hizmetler</h3>
        </div>
        <div class="card-body" style="background-color: #fafafa;">
            @foreach (var item in ViewBag.Services)
            {
                <div class="row mb-3">
                    <div class="col-12 col-md-2 text-center">
                        <span class="h5">@item.ServiceId</span>
                    </div>
                    <div class="col-12 col-md-7">
                        <h5>@item.Title</h5>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Projeler Kutu -->
    <div class="card mb-4" style="border-color: #e0e0e0;">
        <div class="card-header" style="background-color: #e0e0e0; color: #333;">
            <h3>Projeler</h3>
        </div>
        <div class="card-body" style="background-color: #fafafa;">
            @foreach (var item in ViewBag.Projects)
            {
                <div class="row mb-3">
                    <div class="col-12 col-md-2 text-center">
                        @if (!string.IsNullOrEmpty(item.ProjectImageUrl))
                        {
                            <img src="@item.ProjectImageUrl" class="img-fluid rounded" style="width: 70px; height: 70px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Simge yok</span>
                        }
                    </div>
                    <div class="col-12 col-md-7">
                        <h5>@item.ProjectName</h5>
                   
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap 5 Hover Efekti için CSS -->
<style>
    .btn:hover {
        opacity: 0.8;
        transition: 0.3s;
    }

    .card-body {
        padding: 20px;
    }

    .card-header {
        font-size: 1.25rem;
        text-align: center;
    }

    .row {
        align-items: center;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            transition: 0.3s;
        }

    /* Renk uyumları */
    .card-header {
        background-color: #e0e0e0 !important;
    }
</style>
