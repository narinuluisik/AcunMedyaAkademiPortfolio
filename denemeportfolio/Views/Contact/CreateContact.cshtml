@model denemeportfolio.Models.TblContact

@{
    ViewBag.Title = "Yeni İletişim Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni İletişim Girişi</h3>

@using (Html.BeginForm("CreateContact", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Ad</label>
    <input type="text" class="form-control" name="Name" value="@Model.Name" />

    <label>E-Posta</label>
    <input type="text" class="form-control" name="Email" value="@Model.Email" />

    <label>Konu</label>
    <input type="text" class="form-control" name="Subject" value="@Model.Subject" />

    <label>Açıklama</label>
    <textarea class="form-control" name="Description">@Model.Description</textarea>

    <br />
    <br />
    <button class="btn btn-info">İletişimi Kaydet</button>
}
