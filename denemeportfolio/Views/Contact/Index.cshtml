@model List<denemeportfolio.Models.TblContact>

@{
    ViewBag.Title = "İletişim Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>E-Posta</th>
        <th>Konu</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Description</td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Contact/DeleteContacts/@item.ContactId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Contact/CreateContact" class="btn btn-success">Yeni İletişim Ekle</a>
