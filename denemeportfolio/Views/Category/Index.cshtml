@model List<denemeportfolio.Models.TblCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İsim</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
          
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a> </td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">SİL</a> </td>

        </tr>




    }

</table>

<td><a href="/Category/CreateCategory" class="btn btn-success">Yeni Kategori Ekle</a></td>
